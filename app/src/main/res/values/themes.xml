<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Theme.MyActivity.Button.</item>
    </style>

    <style name="Theme.MyActivity.Button." parent="Widget.MaterialComponents.Button">// применение
        для всех кнопок
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/Minicolornova_2024</item>
        <item name="android:backgroundTint">@color/twilight_mint</item>
    </style>

    <style name="Theme.MyActivity.TextView." parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>// размер шрифта
        <item name="android:textColor">@color/Minicolornova_2024</item>
        <item name="android:backgroundTint">@color/twilight_mint</item>
    </style>

    <style name="Theme.MyActivity.TextView.Bolt" parent="Theme.MyActivity.TextView.">
        <item name="android:textStyle">bold</item>//жирный текст
    </style>

</resources>